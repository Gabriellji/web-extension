{
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "es2017": true,
        "es2020": true,
        "amd": true,
        "mongo": true,
        "mocha": true,
        "jest": true
    },
    "globals": { "module": true, "exports": true, "setImmediate": true },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "no-unused-vars": "warn",
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "single"],
        "semi": ["error", "never"]
    }
}
